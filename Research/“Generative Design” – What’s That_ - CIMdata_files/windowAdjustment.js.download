jQuery(function() { 
	headerResize();

	jQuery(window).resize(function() { 
		headerResize();
	});
});

function headerResize() { 
	width = jQuery(this).width();
	
	if(width < 1200) { 
		var searchCode = jQuery("#new-main-nav form").parent().html();
		
		console.log(searchCode);
		
		jQuery("#new-main-nav form").hide();
		jQuery("#new-main-nav .joomla-nav li a").css("font-size", ".85em");
		jQuery(".slideshow-left blockquote").css("font-size", "2.5em");
		jQuery(".slideshow-left .darkbtn").css("font-size", ".8em");
		jQuery(".slideshow-left img").css("margin-top", "50px");
		jQuery(".slideshow-right").css("padding-left", "10%");
		//jQuery("#leftcol").css({"margin-right" : "0", "width" : "29%"});
		//jQuery("#child-content, #child-banner").css("width", "70%");
		jQuery('footer').hide();
		jQuery("#social").hide();
	} else { 
		jQuery("#new-main-nav form").show();
		jQuery("#new-main-nav .joomla-nav li a").css("font-size", "1.05em");
		jQuery('footer').show();
		jQuery("#social").show();
	}
}